{
    "template": "search_result_post",
    "description": "Inject Word count",
    "execution_order": 10,
    "enabled": true,
    "action": "str_replace",
    "find": "<li><xf:username",
    "replace": "<xf:if is=\"{$post.WordCount}\">\n\t<li>{{phrase('word_count')}}: <a class=\"wordcount\">{{$post.WordCount}}</a></li>\n</xf:if>\n$0"
}